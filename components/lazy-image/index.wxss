.load-wrapper {
	position: relative;
	display: inline-block;
}

.lazy-image {
	position: absolute;
	top: 0;
	left: 0;
	border-radius: inherit;
}

.lazy-image,
.img-loading,
.img-error {
	display: block;
	width: 100%;
	height: 100%;
	min-height: inherit;
}

.img-loading {
	display: block;
	width: 100%;
	height: 100%;
}
.img-error,
.img-loading {
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	color: #969799;
	font-size: 14px;
	background-color: #f7f8fa;
}
