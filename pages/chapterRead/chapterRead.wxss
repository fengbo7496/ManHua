.top-nav {
  color: #000000 !important;
  text-align: left !important;
  margin-left: 13% !important;
}

.view-port {
  width: 100vw;
  height: 100vh;
}

.image-view {
  display: block !important;
}

.loading, .error {
  width: 100vw;
  height: 100vh;
  background-color: #181717;
}

.loading .tip {
  font-size: 200rpx;
  font-weight: bold;
}

.error .tip {
  font-size: 35rpx;
}

.loading .tip, .error .tip {
  display: block;
  width: 100vw;
  height: 100vh;
  line-height: 100vh;
  text-align: center;
  color: var(--comic-details-font-color, rgb(150, 151, 153));
}

.error .operation {
  margin-top: 50rpx;
}

.error .operation .action {
  border: 1rpx solid #656565;
  margin-right: 50rpx;
  color: var(--comic-details-font-color, rgb(150, 151, 153));
}

.btn-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.bottom-btn {
  display: inline-flex;
  font-weight: bold;
  flex-flow: column nowrap;
  padding: 50rpx 0rpx 15rpx 0rpx;
}

.bottom-btn .tip {
  font-size: 23rpx;
  font-weight: normal;
  margin-top: 10rpx;
}

.side-wrapper {
  width: 68%;
  font-size: 28rpx;
}

.side-wrapper .side-head {
  position: sticky;
  top: 0;
  background-color: #fff;
  z-index: 2;
  padding-top: 80rpx;
}

.side-wrapper .side-head::after,
.side-wrapper .side-body .item::after {
  display: block;
  content: " ";
  width: 100%;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  transform-origin: 0 0;
  transform: scaleY(0.3);
  z-index: 2;
}

.side-wrapper .side-body,
.side-wrapper .side-head .summary,
.side-wrapper .side-head .update-time {
  padding: 0rpx 30rpx;
}

.side-wrapper .side-head .summary {
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.side-wrapper .side-head .update-time {
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: var(--comic-details-font-color, rgb(150, 151, 153));
}

.side-wrapper .side-head .summary,
.side-wrapper .side-head .update-time {
  display: block;
}

.side-wrapper .side-body .item {
  position: relative;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
}